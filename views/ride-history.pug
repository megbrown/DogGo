extends layout.pug
block content
	h1 Ride history
	table(class="table")
		thead
			each ride in results
				- let date = (ride.date).toString().substring(0, 15)
				tr
					th(colspan="3") Ride for #{date}
					th(colspan="2"): a(href="#" class="show-ride-details" id=`${ride.id}`) View Details
				thead
					tr
						th Name
						th Breed
						th Sex
						th Description
						th Source Shelter
						th Destination Shelter
						each dog in ride.Dogs
							tbody
								tr
									td: a(href=`/dogs/${dog.id}`) #{dog.name}
									td #{dog.breed}
									td #{dog.sex}
									td #{dog.description}
									td: a(href=`/shelters/${dog.sourceShelterId}`) Shelter Name
									td: a(href=`/shelters/${dog.destinationShelterId}`) Shelter Name